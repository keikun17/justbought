.row
  .col.col-lg-8
    = render 'form'

    %ul.feed.media-list
      - @posts.each do |post|
        %li.media
          = render 'stream_row', post: post
    = will_paginate(@posts)
  .col.col-lg-4
    %h1 Just Bought
    Logged in as #{current_user.email}
    %ul
    %li.list-unstyled= link_to "Profile", edit_user_registration_path
    %li.list-unstyled= link_to "Friend Requests (#{current_user.friends.count})"
    %li.list-unstyled= link_to "Settings"
    %li.list-unstyled= link_to "Sign Out", destroy_user_session_path, method: :delete
